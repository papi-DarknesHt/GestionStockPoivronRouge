<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageCompte"
        android:layout_width="142dp"
        android:layout_height="145dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/idCompte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:text="Id"
        app:layout_constraintStart_toEndOf="@+id/imageCompte"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nomCompte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="Nom"
        app:layout_constraintStart_toEndOf="@+id/imageCompte"
        app:layout_constraintTop_toBottomOf="@+id/idCompte" />

    <TextView
        android:id="@+id/prenomCompte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="Prenom"
        app:layout_constraintStart_toEndOf="@+id/imageCompte"
        app:layout_constraintTop_toBottomOf="@+id/nomCompte" />

    <TextView
        android:id="@+id/statuCompte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="Statut"
        app:layout_constraintStart_toEndOf="@+id/imageCompte"
        app:layout_constraintTop_toBottomOf="@+id/prenomCompte" />

    <TextView
        android:id="@+id/emailCompte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="email"
        app:layout_constraintStart_toEndOf="@+id/imageCompte"
        app:layout_constraintTop_toBottomOf="@+id/statuCompte" />
</androidx.constraintlayout.widget.ConstraintLayout>